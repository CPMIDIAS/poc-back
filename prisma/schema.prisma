// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int    @id @default(autoincrement())
  name        String
  email       String
  role        String
  description String
  articles    Articles[]
  createAt    DateTime
  updateAt    DateTime
}


model Articles {
  id        Int     @id @default(autoincrement())
  title       String
  subtitle    String
  content     String
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
  publishedAt DateTime
  createAt    DateTime
  updateAt    DateTime
}